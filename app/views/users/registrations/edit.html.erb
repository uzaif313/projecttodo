<div class="dialog">
  <div class="panel panel-inverse">
    <p class="panel-heading no-collapse">Edit <%= resource_name.to_s.humanize %></p>
      <div class="panel-body">
      <%= devise_error_messages! %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="form-group">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true ,class:"form-control span12"%>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true ,class:"form-control span12"%>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off",class:"form-control span12" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control span12" %>
    </div>

    <div class="form-group">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off",class:"form-control span12" %>
    </div>
      <%= f.hidden_field :role,value:"user" %>
    <div class="form-group">
      <%= f.submit "Update",class:"btn btn-primary form-control" %>
    </div>
<% end %>
</div>
<div class="panel-footer">

<div class="alert alert-danger">
<h3>Cancel my account</h3>
  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>

<%= link_to "Back", :back %>
</div>
</div>
